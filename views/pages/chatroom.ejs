<% layout('layout/chatroomBoilerplate') %>

  <!-- Chatroom -->
  <section class="ai-chat-section" style="padding-top: 100px;">
    <div class="container">
      <div class="section-header">
        <h2>Welcome to the Chatroom</h2>
        <p>Ask your questions in real time</p>
      </div>

      <div class="chat-container">
        <div class="chat-sidebar">
          <h3>Recent Chats</h3>
          <ul class="chat-list">
            <li class="chat-item active"><i class="fas fa-comments"></i>
              <div>
                <h4>General Chat</h4>
                <p>Now</p>
              </div>
            </li>
          </ul>
        </div>

        <div class="chat-main">
          <div class="chat-header">
            <div class="chat-info">
              <div class="avatar"><img src="/images/AI_Tutor_Bot.jpg" alt="AI Tutor" /></div>
              <div>
                <h4>AI Tutor</h4>
                <p class="status">Online</p>
              </div>
            </div>
          </div>

          <div class="chat-messages"></div>

          <div class="chat-input">
            <img src="/images/Student_pic.png" alt="User" class="user-avatar" />
            <input type="text" placeholder="Type your message..." />
            <button class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
          </div>
        </div>
      </div>
    </div>
  </section>


